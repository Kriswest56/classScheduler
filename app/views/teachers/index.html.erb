<p id="notice"><%= notice %></p>

<div style="padding: 20px">

  <div class="jumbotron text-center blueBackground">
    <h1>Teachers</h1>
  </div>

  <div>
    <div class="row">
      <div class="col-sm-3"></div>
      <div class="col-sm-3"></div>
      <div class="col-sm-4"></div>
      <div class="col-sm-2">
        <% if user_signed_in? %>
            <div align="right">
              <label style="color: #2979FF">
                Welcome <%= current_user.email %>
              </label>
            </div>
        <% end %>
      </div>
    </div>
  </div>

  <div class="container">
    <div class="row">
      <div class="col-sm-3"></div>
      <div class="col-sm-3">
        <h3><%= link_to('Index', {:controller => 'home', :action => 'index'} ) %></h3>
      </div>
      <div class="col-sm-3">
        <h3><%= link_to 'New Teacher', new_teacher_path %></h3>
      </div>
      <div class="col-sm-3"></div>
    </div>
  </div>

  <div style="margin-top: 50px">
    <div class="row">
      <div class="col-sm-4"></div>
      <%= form_tag url_for(:controller => 'teachers', :action => 'index'), :method => 'get' do %>
          <div class="col-sm-3">
            <%= text_field_tag :search, params[:search], class: 'form-control', :placeholder => 'Search by Last Name' %>
          </div>
          <div class="col-sm-3">
            <%= submit_tag "Search", :name => nil, class: 'btn btn-info' %>
          </div>
      <% end %>
      <div class="col-sm-2"></div>
    </div>
  </div>

  <div style="margin-top: 50px">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>First Name</th>
          <th>Last Name</th>
          <th>Section</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @teachers.each do |teacher| %>
          <tr>
            <td><%= teacher.firstname %></td>
            <td><%= teacher.lastname %></td>
            <td><%= teacher.section.sectionNumber %></td>
            <td><%= link_to 'Show', teacher %></td>
            <td><%= link_to 'Edit', edit_teacher_path(teacher) %></td>
            <td><%= link_to 'Remove', teacher, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

</div>